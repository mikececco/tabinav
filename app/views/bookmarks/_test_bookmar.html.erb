<div class="mx-auto p-8 px-40">
  <div class="flex flex-wrap -mx-4">
    <% @bookmarks.each do |bookmark| %>
      <div class="w-full sm:w-1/2 md:w-1/2 xl:w-1/4 p-4 rounded-lg pb-8">
        <div class="relative pb-48 overflow-hidden">
          <img
              class="absolute inset-0 h-full w-full object-cover p-6"
              src="https://source.unsplash.com/random/1200x800/?<%= bookmark.route.days.first.city %>"
              alt="Image of city"
              <%# width="500"
              height="600" %>
            >
        </div>
        <div class="p-4">
          <%# <span class="inline-block px-2 py-1 leading-none bg-orange-200 text-orange-800 rounded-full font-semibold uppercase tracking-wide text-xs">Highlight</span> %>
          <h2 class="mt-2 mb-2  font-bold"><%= bookmark.route.destination %></h2>
          <% bookmark.route.days.each do |day| %>
            <p class="text-sm">
              <%= day.name %>
            </p>
          <% end %>
          <a href="routes/<%= bookmark.route.id %>" class="font-medium text-sm text-darkerYellow mt-2">
            Explore<span class="text-darkerYellow">&hellip;</span>
          </a>
          <div class="mt-3 flex items-center">
            <span class="text-sm font-semibold">for</span>&nbsp;<span class="font-bold text-xl"><%= bookmark.route.total_price %></span>&nbsp;<span class="text-sm font-semibold">â‚¬</span>
          </div>
        </div>
        <div class="p-4 border-t text-xs text-gray-700">
          <span class="flex items-center mb-1">
            <i class="far fa-clock fa-fw mr-2 text-gray-900"></i> <%= bookmark.route.days.count %> days
          </span>
          <span class="flex items-center">
            <i class="far fa-address-card fa-fw text-gray-900 mr-2"></i> VISA not needed
          </span>
        </div>
        <div class="text-center pb-4 align-bottom">
          <% if bookmark.booking == nil %>
            <div class="place-items-center">
              <!-- Modal toggle -->
              <button id="bookButton" data-modal-target="defaultPopup" data-modal-show="defaultPopup" class="hover:scale-125 float-left mr-2 bg-mainYellow hover:bg-darkerYellow text-white text-sm font-bold rounded px-2 py-1 hover:scale-110 transition duration-5000 ease-in-out">
                Book!
              </button>
            </div>
            <!-- Main modal -->
            <div id="defaultPopup" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] md:h-full">
                <div class="absolute w-1/3 h-full min-w-1/2 md:h-auto">
                    <!-- Modal content -->
                  <%= render "bookings/booking_modal", bookmark: bookmark %>
                </div>
            </div>
          <% else %>
            <div class="">
              <p class="block text-black bg-grey-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center ">
                You have already booked this trip!
              </p>
              <%= link_to "Cancel Booking", booking_path(bookmark.booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?", class: "block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"} %>
            </div>
          <% end %>
        </div>
        <%# <button class="hover:scale-125 float-left mr-2 bg-mainYellow hover:bg-darkerYellow text-white text-sm font-bold rounded px-2 py-1 hover:scale-110 transition duration-5000 ease-in-out">
          View
        </button> %>
      </div>
    <% end %>
  </div>
</div>
