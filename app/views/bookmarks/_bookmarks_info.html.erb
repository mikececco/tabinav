<% @bookmarks.each do |bookmark| %>
  <div
    class="transition ease-in-out delay-150 flex-none w-2/4 md:w-1/5 pb-4 bg-white rounded-lg overflow-hidden mr-16 bg-opacity-90 hover:bg-opacity-100 hover:shadow-xl hover:scale-125"
  >
    <%= render "shared/simple_card", route: bookmark.route %>

  </div>

  <div class="w-2/4 md:w-1/5 pb-4 text-center">
    <!-- Modal toggle -->
    <button data-modal-target="defaultModal" data-modal-toggle="defaultModal" class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
      Book!
    </button>

    <!-- Main modal -->
    <div id="defaultModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] md:h-full">
        <div class="relative w-1/3 h-full min-w-1/2 md:h-auto">
            <!-- Modal content -->
          <%= render "bookings/booking_modal", bookmark: bookmark %>
        </div>
    </div>
  </div>
<% end %>
