<% @bookings.each do |booking| %>
<div class="w-full w-80 rounded-lg pb-8 p-4">
  <a href="routes/<%= booking.bookmark.route.id %>">
    <div class="c-card block bg-white shadow-md hover:shadow-xl rounded-lg overflow-hidden">
      <div class="relative pb-48 overflow-hidden">
        <img class="absolute inset-0 h-full w-full object-cover p-6" src="https://source.unsplash.com/random/900x600/?<%= booking.bookmark.route.days.first.city %>" alt="Image of city">
      </div>
      <div class="p-4">
        <h2 class="mt-2 mb-2 font-bold"><%= booking.bookmark.route.destination.capitalize %></h2>
        <% booking.bookmark.route.days.limit(4).each do |day| %>
          <p class="text-sm"><%= day.name %></p>
        <% end %>
        <a href="routes/<%= booking.bookmark.route.id %>" class="font-medium text-sm text-darkerYellow mt-2">
          View Route<span class="text-darkerYellow">&hellip;</span>
        </a>
        <div class="mt-3 flex items-center">
          <span class="text-sm font-semibold">for</span>&nbsp;<span class="font-bold text-xl"><%= booking.bookmark.route.total_price.round(2) %></span>&nbsp;<span class="text-sm font-semibold">â‚¬</span>
        </div>
      </div>
       <div class="p-4 border-t text-xs text-gray-700 flex flex-col">
        <div class="mb-4">
          <span class="flex items-center">
            <i class="far fa-calendar-alt fa-fw mr-2 text-gray-900"></i> <%= booking.bookmark.route.start_date.strftime('%b %d, %Y') %> - <%= booking.bookmark.route.end_date.strftime('%b %d, %Y') %>
          </span>
        </div>
        <div class="mx-auto">
          <%= link_to "Cancel booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "mx-auto hover:scale-125 hover:bg-darkerYellow text-darkerYellow hover:text-white text-sm font-normal rounded px-3 py-2 hover:scale-110 transition duration-5000 ease-in-out" %>
        </div>
      </div>
    </div>
  </a>
</div>
<% end %>
