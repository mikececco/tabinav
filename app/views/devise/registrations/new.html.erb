<div class="w-full max-w-md mx-auto my-10 rounded-lg p-4 bg-white shadow-md">
  <h2 class="font-bold text-xl mb-4">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "block w-full py-2 px-4 mb-2 border rounded-lg" }%>
      <%= f.input :password,
                  required: true,
                  hint: false,
                  input_html: { autocomplete: "new-password", class: "block w-full py-2 px-4 mb-2 border rounded-lg" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "block w-full py-2 px-4 mb-4 border rounded-lg" } %>
    </div>

    <div class="text-xs text-gray-500 mb-2">Password must be at least <%= @minimum_password_length %> characters.</div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "bg-mainYellow hover:bg-darkYellow text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

