<div class="w-full max-w-md mx-auto my-10 rounded-lg p-4 bg-white shadow-md">
  <h2 class="font-bold text-xl mb-4">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "block w-full py-2 px-4 mb-2 border rounded-lg" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "block w-full py-2 px-4 mb-4 border rounded-lg" } %>
      <div class="flex items-center mb-4">
        <%= f.input :remember_me, as: :boolean, wrapper: false, input_html: { class: "mr-2" } if devise_mapping.rememberable? %>
        <%# <span class="text-sm"></span> %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "bg-mainYellow hover:bg-darkYellow text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
