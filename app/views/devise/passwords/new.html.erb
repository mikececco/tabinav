<div class="w-full max-w-md mx-auto my-10 rounded-lg p-4 bg-white shadow-md">
  <h2 class="font-bold text-xl mb-4">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "block w-full py-2 px-4 mb-4 border rounded-lg" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send Reset Instructions", class: "bg-mainYellow hover:bg-darkYellow text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
