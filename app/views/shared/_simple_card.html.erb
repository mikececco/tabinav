<a href="routes/<%= route.id %>" class="space-y-4">
  <div class="aspect-w-16 aspect-h-9">
    <img
      class="object-cover shadow-md hover:shadow-xl"
      src="https://images.unsplash.com/photo-1547586696-ea22b4d4235d?ixlib=rb-1.2.1&ixqx=3H1AJd0Pae&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1679&q=80"
      alt=""
    />
  </div>
  <div class="px-4 py-2 text-center">
    <div class="text-lg leading-6 font-medium space-y-1">
      <h3 class="font-bold text-gray-800 mb-2">
        <%= route.destination %>
      </h3>
    </div>
    <div class="">
      <% route.days.each do |day| %>
      <p class="">
          <%= day.name %>
      </p>
      <% end %>
      <p class="font-medium text-sm text-darkerYellow mt-2">
        Explore<span class="text-darkerYellow">&hellip;</span>
      </p>
    </div>
  </div>
</a>
